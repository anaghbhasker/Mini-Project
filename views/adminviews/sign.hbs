<head>
  <style>
    @media (min-width: 1025px) { .h-custom { height: 100vh !important; } }
  </style>
</head>
<body>
  <section class="h-100 h-custom" style="background-color: #8fc4b7;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-8 col-xl-6">
          <div class="card rounded-3">
            <img
              src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/img3.webp"
              class="w-100"
              style="border-top-left-radius: .3rem; border-top-right-radius: .3rem;"
              alt="Sample photo"
            />
            <div class="card-body p-4 p-md-5">
              <h3 class="mb-4 pb-2 pb-md-0 mb-md-5 px-md-2">Registration Info</h3>
              <div id="errorrr">

                <p id="invalid">{{signupErr}}</p></div>

              <form class="px-md-2" action="/admin/submit" method="post">

                <div class="form-outline mb-4">
                  <input
                    type="text"
                    id="form3Example1q"
                    class="form-control"
                    name="fullname" required
                  />
                  <label class="form-label" for="form3Example1q">Full Name</label>
                </div>

                <div class="row">
                  <div class="col-md-6 mb-4">

                    <div class="form-outline datepicker">
                      <input
                        type="email"
                        class="form-control"
                        id="exampleDatepicker1"
                        name="email" required
                      />
                      <label for="exampleDatepicker1" class="form-label">Your
                        Email
                      </label>
                    </div>

                  </div>
                  <div class="col-md-6 mb-4">

                    <select class="select">
                      <option value="1" disabled>Position</option>
                      <option value="2">CEO</option>
                      <option value="3">Manager</option>
                      <option value="4">Employe</option>
                    </select>

                  </div>
                </div>

                <div class="row mb-4 pb-2 pb-md-0 mb-md-5">
                  <div class="col-md-6">

                    <div class="form-outline">
                      <input
                        type="password"
                        id="form3Example1w"
                        class="form-control"
                        name="password" required
                      />
                      <label
                        class="form-label"
                        for="form3Example1w"
                      >Password</label>
                    </div>

                  </div>
                </div>

                <button
                  type="submit"
                  class="btn btn-success btn-lg mb-1"
                >Submit</button>
                <p class="text-center text-muted mt-5 mb-0">Have already an
                  account?
                  <a href="/admin" class="fw-bold text-body"><u>Login here</u></a></p>

              </form>

            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</body>