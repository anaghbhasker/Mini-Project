<h1 class="text-center" style="color: red;">{{searchErr}}</h1>

<div class="container-fluid">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Full Name</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col">Option</th>
      </tr>
    </thead>
    <tbody>
      {{#each user}}
      <tr>
        <th scope="row">{{@index}}</th>
        <td>{{this.fullname}}</td>
        <td>{{this.Email}}</td>
        <td>{{this.Password}}</td>
        <td>
        <a href="/admin/deleteuser/{{this._id}}"><button type="button" style="width: 60px;height: 30px;font-size: 12px;display: block;" class="btn btn-danger">Delete</button></a></button></td>
      </tr>
     
      {{/each}}

    </tbody>
  </table>
