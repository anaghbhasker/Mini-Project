<nav class="navbar navbar-light">
  <div class="container-fluid">
    <a class="navbar-brand text-white" href="/admin/back">Back</a>
    <a class="navbar-brand text-white" href="/admin/logout">Logout</a>
    <form class="d-flex" action="/admin/productsearch" method="post">
      <input
        class="form-control me-2"
        type="search"
        placeholder="Search"
        aria-label="Search"
        name="name"
      />
      <button class="btn btn-outline-success" type="submit">Search</button>
    </form>



</nav>

<p>
  <a
    class="btn btn-primary w-100"
    data-bs-toggle="collapse"
    href="#collapseExample"
    role="button"
    aria-expanded="false"
    aria-controls="collapseExample"
  >
    Add Product
  </a>
</p>
<div class="collapse" id="collapseExample">
  <div class="card card-body">
    <form action="/admin/addproduct" method="post">
      <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">Product Name</label>
        <input
          type="text"
          name="productname"
          class="form-control"
          id="exampleInputEmail1"
          aria-describedby="emailHelp" required
        />

      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Product
          Description</label>
        <input type="text" name="productdescription" class="form-control" id="exampleInputPassword1" required/>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Product Price</label>
        <input type="text" name="productprice" class="form-control" id="exampleInputPassword1" required/>
      </div>
      <div class="mb-3">
        <label for="exampleInputPassword1" class="form-label">Product Image</label>
        <input type="text" name="productimage" class="form-control" id="exampleInputPassword1" required/>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
<h1 class="text-center" style="color: red;">{{productsearchErr}}</h1>
<div class="container-fluid">
  <table class="table table-dark">
    <thead>
      <tr>
        <th scope="col">No</th>
        <th scope="col">Name</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Image</th>
        <th scope="col">Option</th>
      </tr>
    </thead>
    <tbody>
      {{#each product}}
      <tr>
        <th scope="row">{{@index }}</th>
        <td>{{this.productname}}</td>
        <td>{{this.productdescription}}</td>
        <td>{{this.productprice}}</td>
        <td><img style="width: 40px;height: 50px;" src="{{this.productimage}}" alt=""></td>
        <td><button type="button" style="width: 60px;height: 30px;font-size: 12px;display: block;" class="btn btn-primary rounded-pill" data-bs-toggle="modal" data-bs-target="#productData{{@index}}">
            Edit
         </button><br>
        <a href="/admin/deleteproduct/{{this._id}}"><button type="button" style="width: 60px;height: 30px;font-size: 12px;display: block;" class="btn btn-danger">Delete</button></a></button></td>
      </tr>
      <div class="modal fade" id="productData{{@index}}" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit Product</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              <form action="/admin/editproduct/{{this._id}}" method="post">
                <label for="inputPassword5" class="form-label">Product Name</label>
                <input type="text"  class="form-control" name="productname" value="{{this.productname}}" required/>
                <label for="inputPassword5" class="form-label">Product Discription</label>
                <input type="text"  class="form-control" name="productdescription" value="{{this.productdescription}}" required/>
                <label for="inputPassword5" class="form-label">Product Price</label>
                <input type="text"  class="form-control" name="productprice" value="{{this.productprice}}" required/>
                <label for="inputPassword5" class="form-label">Product Image</label>
                <input type="text"  class="form-control" name="productimage" value="{{this.productimage}}" required/>
                <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
              </form>
            </div>
            
          </div>
        </div>
      </div>
      {{/each}}

    </tbody>
  </table>
</div>

